{
  "extends": "../../tsconfig.base.json",
  "types": ["node"],
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "__tests__"]
}
